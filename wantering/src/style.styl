highlightColor = #e8878b
highlightHoverColor = #e47277
highlighBackgroundColor = #f6f6f6
bannerFullHeight = 600px
bannerSmallHeight = 400px
bannerExtraHeight = 800px
hoverShadow = 0 1px 6px rgba(22,22,22,.15)
textShadow = 0 0 15px rgba(22,22,22,.7),0 -1px 1px rgba(22,22,22,.4)
textOutglow = 0 0 3px rgba(22,22,22,.4)

/*
 * Common
 */

body
  color: #333333
  background: #fff

a
  outline: 0
  color: black
a:hover
  text-decoration: none
  color: highlightColor !important

button,.btn,select,input
  border-radius: 0 !important

header
  height: 50px
  .navbar-brand
    display: block
    width: 50px
    height: 50px
    text-indent: -99999px
    background-image: url('../img/logo.png')
  .navbar
    border: 0
  .navbar-nav:first-child
    margin-left: 40%
    .active
      a
        font-weight: bold
        color: black
        background-color: highlighBackgroundColor
  // BUG FIX
  .navbar-right
    margin-right: 0px
    .btn
      padding: 8px 16px
      margin: 6px
      color: black

footer
  color: #999
  background-color: highlighBackgroundColor
  margin-top: 10px
  padding-bottom: 20px
  #footer-search
    padding: 50px 0px
  a
    color: #999
    display: block
  #site-map
    color: #333
    background-color: white
    a
      color: #333
  #contact-us
    a
      font-size: 2em
      margin: 10px

@media (min-width: 768px)
  footer
    #footer-search
      width: 70%
      margin-left: 15%
    #site-map
      div
        height: 200px
        border-right: 2px solid highlighBackgroundColor
      div:last-child
        border-right: none

@media (max-width: 767px)
  header
    .navbar-nav:first-child
      margin: 7.5px -15px

/*
 * Home
 */

#home
  .container
    form
      input[name="search"]
        width: 85%
      button[type="submit"]
        color: white
        background-color: highlightColor
        border: none
        padding: 10px 16px
        &:hover
          background-color: highlightHoverColor
  .container-fluid
    .row:first-child
      position: relative
      a
        width: auto !important
        position: absolute
        right: 24px
        top: 24px
        &:after
          content: '\232A'
          margin-left: 5px
  #banner
    height: bannerFullHeight
    padding: 0px
    position: relative
    color: white
    #banner-search
      position: absolute
      left: 15%
      bottom: 35%
      width: 70%
      form
        padding: 10px 4px
        background-color: black
        background-color: rgba(0, 0, 0, 0.2)
        border: black 2px solid
        border: rgba(0, 0, 0, 0.2) 2px solid
    #slogon
      width: 100%
      position: absolute
      bottom: 25%
      text-shadow: textShadow
    .banner
      height: bannerFullHeight
      background-position: center
      background-size: cover
      position: absolute
      top: 0px
      width: 100%
  #categories
    .category-row
      margin: 4px 0px
      > div
        padding: 5px
        height: 200px
        &:hover
          box-shadow: hoverShadow
          background-color: highlighBackgroundColor
        a
          color: white
          background-position: 40% 35%
          background-size: cover
          background-repeat: no-repeat
          display: block
          height: 100%
          width: 100%
          padding: 150px 10px 10px 10px
          font-size: 1.4em
          text-shadow: textShadow
  #brands
    .row:last-child
      ul
        padding: 15px
        overflow: hidden
        white-space: nowrap
        li
          display: inline-block
          width: 114px
          height: 114px
          background-size: cover
          margin: 5px
          border: 3px solid white
          box-shadow: 1px 1px 2px 0 #e9e9eb
          &:hover
            box-shadow: hoverShadow
            background-color: highlighBackgroundColor
          a
            display: block
            width: 100%
            height: 100%
            text-indent: -99999px
  #collections
    .col-sm-12
      margin: 5px
      padding: 0px
    .block
      padding: 0px
      height: 300px
      background-size: cover
      background-position: center
      position: relative
      > div
        height: 150px
        background-position: center
      .type
        color: white
        position: absolute
        top: 10px
        left: 10px
        text-shadow: textOutglow
      .text
        padding: 0px 10px
      &:hover
        box-shadow: hoverShadow
        background-color: highlighBackgroundColor
        .read
          border: 1px solid highlightColor
        .type
          color: highlightColor
    .block.featured
      color: white
      padding: 10px
      text-shadow: textOutglow
      .text
        position: absolute
        bottom: 5px
      .read
        padding: 4px 10px
        margin-left: 15px
        position: absolute
        bottom: 20px
        height: 32px
        &:after
          content: '\232A'
          margin-left: 5px

@media (min-width: 768px)
  footer
    #site-map
      div
        padding: 30px  20px 60px 20px
  #home
    .container
      form
        input[name="search"]
          font-size: 18px
          height: 44px
        button[type="submit"]
          font-size: 18px
          line-height: 1.3333333

@media (min-width: 1170px)
  #home
    #banner
      height: bannerExtraHeight
      .banner
        height: bannerExtraHeight

@media (max-width: 767px)
  #home
    .container
      form
        input[name="search"]
          width: 100%
        button[type="submit"]
          margin-top: 12px
    #banner
      height: bannerSmallHeight
      h1
        font-size: 32px
      .banner
        height: bannerSmallHeight
      #banner-search
        top: 20%
        width: 90%
        left: 5%
        form
          padding: 20px
    #collections
      .others
        padding: 0px
